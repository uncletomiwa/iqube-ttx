<h1>Listing sips</h1>

<table class="table table-bordered table-stripped">
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Contact</th>
    <th>Lon</th>
    <th>Lat</th>
    <th></th>
    <th></th>
    <th></th>
    <th>BE Status</th>
  </tr>

<% @sips.each do |sip| %>
  <tr class="<%= if sip.pushed; :success;else;:error;end; %>">
    <td><%= sip.name %></td>
    <td><%= sip.category %></td>
    <td><%= sip.contact %></td>
    <td><%= sip.lon %></td>
    <td><%= sip.lat %></td>
    <td><%= link_to 'Show', sip %></td>
    <td><%= link_to 'Edit', edit_sip_path(sip) %></td>
    <td><%= link_to 'Destroy', sip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td><%= if sip.pushed; pushed; else; link_to "push", sip_path(sip),class: :btn, method: :put, data: { confirm: 'This Sip will be sent to the BE now, continue?'}; end %></td>
  </tr>
<% end %>
</table>

