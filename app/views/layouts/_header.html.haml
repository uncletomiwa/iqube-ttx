%div.navbar.navbar-static-top
  %div.navbar-inner
    %div.container      
      = link_to "p2fx-rails", root_path, :class=>:brand
      %a{:class=>"btn btn-navbar", :data=>{:toggle=>:collapse, :target=>".nav-collapse"}}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %ul.nav.nav-collapse
        %li.active= link_to "Home", root_path
        %li.divider-vertical
        %li= link_to "About", about_path
        %li= link_to "Contact", contact_path
        %li= link_to "Help", help_path
        - if user_signed_in?
          %li.dropdown
            %a{:class=> 'dropdown-toggle', :data=>{:toggle=>:dropdown}}
              Sip Profiles
              %b.caret
            %ul.dropdown-menu
              %li= link_to "View Sips", sips_path
              %li= link_to "Enter Sip", new_sip_path
          %li.dropdown
            %a{:class=> 'dropdown-toggle', :data=>{:toggle=>:dropdown}}
              Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Edit Account", edit_user_registration_path
              %li= link_to "Sign Out", destroy_user_session_path, :method=> :delete
        - else
          %li= link_to "Register", new_user_registration_path
          %li.divider-vertical
          %li= link_to "Sign In", new_user_session_path
