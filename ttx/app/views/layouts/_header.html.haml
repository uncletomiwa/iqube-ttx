%div.navbar.navbar-static-top
  %div.navbar-inner
    %div.container      
      = link_to "iQube's TTX", root_path, :class=>:brand
      %a{:class=>"btn btn-navbar", :data=>{:toggle=>:collapse, :target=>".nav-collapse"}}
        %i.icon-wrench
      %ul.nav.nav-settings.hidden-desktop.visble-phone.nav-stacked.nav-pills
        %li.active= link_to "Home", root_path
        %li.divider-verticalh
      %ul.nav.nav-collapse.hidden-phone
        %li.active= link_to "Home", root_path
        %li.divider-vertical
        %li= link_to "About", about_path
        %li= link_to "Contact", contact_path
      %ul.nav.nav-collapse.pull-right
        - if user_signed_in?          
          %li= link_to "View Sips", sips_path
          %li= link_to "Enter Sip", new_sip_path
          %li= link_to "Edit Account", edit_user_registration_path, :class=>"hidden-desktop"
          %li= link_to "Sign Out", destroy_user_session_path, :method=> :delete, :class=>"hidden-desktop"
          %li.dropdown.pull-right.hidden-phone
            %a{:class=> 'dropdown-toggle', :data=>{:toggle=>:dropdown}}
              Account
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Edit Account", edit_user_registration_path
              %li= link_to "Sign Out", destroy_user_session_path, :method=> :delete
        - else
          %li= link_to "Register", new_user_registration_path
          %li.divider-vertical
          %li= link_to "Sign In", new_user_session_path
